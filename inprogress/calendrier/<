#include<iostream>
#include<map>
#include<string>


//Un simple calendrier où chaque mois a le meme nombre de jours.
//On avance dans le calendrier en incrementant le nombre de jours, de mois et d'années.
//Les mois et années sont des paramètres optionnels

using namespace std;


namespace cal{

  int an = 0 ;
  int jour = 1;
  int mois = 1;
  //Nombre de jours par mois:
  int mois_size = 30 ;
  //Nombre de mois par an:
  int an_size = 2 ;
  //Stocke le nom des mois:
  std::map<int,std::string> mois_noms;

  void afficheDate() {
    cout<<"Jour: "<<jour<<" Mois: " <<mois<<" Année:"<<an<<endl;
    return;
  }

  //Calcule la date apres un increment de njour,nmois et nans (nmois et nans optionnels)
  void changeDate(const int njour,const int nmois = 0, const int nans = 0){
    jour += njour;
    mois += (int)njour/mois_size + nmois;
    an += (int)mois/an_size + nans;
    //Reset correct day and month according to the calendar:
    if(jour>mois_size) jour = jour % mois_size ;
    if(mois>an_size)  mois = mois % an_size ; 
    return;
  }
}


int main(){

  cal::afficheDate();
  cal::changeDate(300,1,1);
  cal::afficheDate();
  cal::changeDate(120);
  cal::afficheDate();


  return 0 ; 

}
